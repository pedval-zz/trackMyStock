<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.pedrovalencia.trackmystock.activities.EmptyListActivity">

    <TextView
        android:id="@+id/first_company_text"
        android:text="@string/add_first_company"
        style="@style/EmptyListTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/plus_symbol_text"
        android:text="@string/plus_symbol"
        style="@style/EmptyListPlusSymbolStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/first_company_text"
        android:layout_toRightOf="@+id/first_company_text"
        android:layout_toEndOf="@+id/first_company_text"
        android:paddingLeft="15px"
        android:paddingRight="15px"
        android:onClick="goToAddCompanyActivity"
        android:clickable="true"/>


</RelativeLayout>
