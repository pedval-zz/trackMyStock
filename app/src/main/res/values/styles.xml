<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--Cover font style-->
    <style name="coverTextStyle">
        <item name="android:fontFamily">"sans-serif"</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textSize">50sp</item>
    </style>

    <!--EmptyListActivity font style -->
    <style name="EmptyListTextStyle">
        <item name="android:fontFamily">"sans-serif"</item>
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>

    <!--EmptyListActivity (plus symbol) font style -->
    <style name="EmptyListPlusSymbolStyle">
        <item name="android:fontFamily">"sans-serif"</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>



</resources>
