<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pedrovalencia.trackmystock" >

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- Theme.Light.NoTitleBar.Fullscreen remove title bar -->
        <activity
            android:name=".activities.CoverActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.EmptyListActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name=".activities.AddCompanyActivity"
            android:label="@string/title_activity_add_company" >
        </activity>
        <activity
            android:name=".activities.CompanyListActivity"
            android:label="@string/title_activity_company_list" >
        </activity>
        <activity
            android:name=".activities.DetailActivity"
            android:label="@string/title_activity_detail" >
        </activity>
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
    </application>

</manifest>
